class Solution {
    public boolean isPerfectSquare(int num) {
        if(num<0){
            return false;
        }
        if(num==0 || num==1){
            return true;
        }
        int l=1;
        int r=num;
        while(l<=r){
            int mid=l+(r-l)/2;
            long square=(long)mid*mid;
            if(square==num){
                return true;
            }else if(square>num){
                r=mid-1;
            }else{
                l=mid+1;
            }
        }
        return false;
    }
}
