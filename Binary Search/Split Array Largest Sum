class Solution {
    public int isPossible(int[] nums, int mid){
        int count=1, tempSum=0, n=nums.length;
        for(int i=0;i<n;i++){
            if(tempSum+nums[i]<=mid){
                tempSum+=nums[i];
            }else{
                count++;
                tempSum=nums[i];
            }
        }
        return count;
    }
    public int splitArray(int[] nums, int k) {
        int l=0, r=0, n=nums.length;
        for(int i=0;i<n;i++){
            l=Math.max(l,nums[i]);
            r=r+nums[i];
        }
            int mid=0, ans=0;
            while(l<=r){
                mid=(l+r)/2;
                int count=isPossible(nums,mid);
                if(count<=k){
                    r=mid-1;
                    ans=mid;
                }else{
                    l=mid+1;
                }
            }
            return ans;
    }
}
